---
// Core Domains Section Component
import AIAgentModal from './CoreDomainSection/AIAgentModal.astro';
import BackendModal from './CoreDomainSection/BackendModal.astro';
import FrontendModal from './CoreDomainSection/FrontendModal.astro';
import DatabaseModal from './CoreDomainSection/DatabaseModal.astro';
import DevOpsModal from './CoreDomainSection/DevOpsModal.astro';
---

<section class="py-24 px-6 bg-black">
	<div class="max-w-6xl mx-auto">
		<h2 class="text-5xl md:text-6xl font-black text-center mb-4 tracking-tight">
			<span class="text-white">核心领域</span>
		</h2>
		<div class="text-center mb-16">
			<span class="text-cyan-400 font-mono text-sm tracking-[0.3em]">CORE DOMAINS</span>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			<!-- AI Agent -->
			<button onclick="document.getElementById('modal-ai').showModal()" class="relative p-8 bg-black border-2 border-zinc-800 hover:border-cyan-500 transition-all duration-300 group cursor-pointer text-left w-full">
				<div class="absolute top-0 left-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute top-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute bottom-0 left-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute bottom-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>

				<div class="mb-4">
					<span class="text-cyan-400 font-mono text-xs tracking-wider">[01]</span>
				</div>
				<h3 class="text-2xl font-black text-white mb-3 tracking-tight">AI Agent</h3>
				<p class="text-gray-400 text-sm leading-relaxed">AI Agent 工具开发与全链条使用<br />让智能融入每个人的生活</p>
			</button>

			<!-- Web全栈 -->
			<button onclick="document.getElementById('modal-web').showModal()" class="relative p-8 bg-black border-2 border-zinc-800 hover:border-cyan-500 transition-all duration-300 group cursor-pointer text-left w-full">
				<div class="absolute top-0 left-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute top-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute bottom-0 left-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute bottom-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>

				<div class="mb-4">
					<span class="text-cyan-400 font-mono text-xs tracking-wider">[02]</span>
				</div>
				<h3 class="text-2xl font-black text-white mb-3 tracking-tight">企业级后端应用</h3>
				<p class="text-gray-400 text-sm leading-relaxed">Spring Boot 生态 / Express.js / Koa ...<br />接触企业级 Web 后端应用开发</p>
			</button>

			<!-- Spring Boot -->
			<button onclick="document.getElementById('modal-spring').showModal()" class="relative p-8 bg-black border-2 border-zinc-800 hover:border-cyan-500 transition-all duration-300 group cursor-pointer text-left w-full">
				<div class="absolute top-0 left-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute top-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute bottom-0 left-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute bottom-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>

				<div class="mb-4">
					<span class="text-cyan-400 font-mono text-xs tracking-wider">[03]</span>
				</div>
				<h3 class="text-2xl font-black text-white mb-3 tracking-tight">前沿前端工程</h3>
				<p class="text-gray-400 text-sm leading-relaxed">React / Vue / Vite 现代前端工具链实战<br />Next.js / Nuxt / 全栈框架开发与部署</p>
			</button>

			<!-- Node.js -->
			<button onclick="document.getElementById('modal-node').showModal()" class="relative p-8 bg-black border-2 border-zinc-800 hover:border-cyan-500 transition-all duration-300 group cursor-pointer text-left w-full">
				<div class="absolute top-0 left-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute top-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute bottom-0 left-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute bottom-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>

				<div class="mb-4">
					<span class="text-cyan-400 font-mono text-xs tracking-wider">[04]</span>
				</div>
				<h3 class="text-2xl font-black text-white mb-3 tracking-tight">高性能数据库设计</h3>
				<p class="text-gray-400 text-sm leading-relaxed">MySQL / PostgreSQL / MongoDB / Redis<br />亲手设计服务全校师生的数据库结构与查询</p>
			</button>

			<!-- 大前端 -->
			<button onclick="document.getElementById('modal-frontend').showModal()" class="relative p-8 bg-black border-2 border-zinc-800 hover:border-cyan-500 transition-all duration-300 group cursor-pointer text-left w-full">
				<div class="absolute top-0 left-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute top-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute bottom-0 left-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute bottom-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>

				<div class="mb-4">
					<span class="text-cyan-400 font-mono text-xs tracking-wider">[05]</span>
				</div>
				<h3 class="text-2xl font-black text-white mb-3 tracking-tight">Linux 与 DevOps</h3>
				<p class="text-gray-400 text-sm leading-relaxed">接触生产环境服务器，掌握 Linux 运维能力<br />设计现代 DevOps 流水线</p>
			</button>

			<!-- More -->
			<div class="relative p-8 bg-black border-2 border-cyan-500 transition-all duration-300">
				<div class="absolute top-0 left-0 w-2 h-2 bg-cyan-500"></div>
				<div class="absolute top-0 right-0 w-2 h-2 bg-cyan-500"></div>
				<div class="absolute bottom-0 left-0 w-2 h-2 bg-cyan-500"></div>
				<div class="absolute bottom-0 right-0 w-2 h-2 bg-cyan-500"></div>

				<div class="mb-4">
					<span class="text-cyan-400 font-mono text-xs tracking-wider">[...]</span>
				</div>
				<h3 class="text-2xl font-black text-cyan-400 mb-3 tracking-tight">More...</h3>
				<p class="text-gray-400 text-sm leading-relaxed">探索无限可能<br /><span class="block"></span></p>
			</div>
		</div>
	</div>
</section>

<!-- Modals -->
<AIAgentModal />
<BackendModal />
<FrontendModal />
<DatabaseModal />
<DevOpsModal />
